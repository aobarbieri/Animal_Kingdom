<%- include('../partials/header') %>


    <nav class="medical-records-nav">
        <a href="/user/<%=user._id%>">Dashboard</a> > <span>Medical Records</span>
    </nav>

    <section class="medical-records ">

        <h2>
            Medical Records for <%= pet.name %>
        </h2>
        <div class="pet-about">
            <h3>About</h3>
            <p>Name: <%= pet.name %>
            </p>
            <p>Species: <%= pet.species %>
            </p>
            <p>Breed: <%= pet.breed %>
            </p>
            <p>Age: <%= pet.age %>
            </p>
            <p>DOB: <%= pet.DOB.toLocaleDateString() %>
            </p>
        </div>

        <h3>Appointment history</h3>
        <% if(records.length){ %>
            <table>
                <thead>
                    <tr>
                        <% if(user.userType==="Veterinarian" ){ %>
                            <th></th>
                            <% } %>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Diagnosis</th>
                                <th>Treatment</th>
                                <th>Medication prescribed</th>
                                <% if(user.userType==="Veterinarian" ){ %>
                                    <th></th>
                                    <% } %>
                    </tr>
                </thead>

                <% records.forEach(r=> { %>
                    <tbody>
                        <form action="/user/<%= user._id %>/records/<%= r._id %>?_method=DELETE" method="POST">
                            <tr>
                                <% if(user.userType==="Veterinarian" ){ %>
                                    <td><button type="submit">X</button></td>
                                    <% } %>

                                        <td>
                                            <%= r.date.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= r.date.toLocaleTimeString([], { hour: "2-digit" , minute: "2-digit" })
                                                %>
                                        </td>
                                        <td>
                                            <%= r.diagnosis %>
                                        </td>
                                        <td>
                                            <%= r.treatment %>
                                        </td>
                                        <td>
                                            <%= r.medication %>
                                        </td>
                                        <% if(user.userType==="Veterinarian" ){ %>
                                            <td><a href="/user/<%= user._id %>/records/<%= r._id %>/edit">EDIT</a>
                                            </td>
                                            <% } %>
                            </tr>
                        </form>
                    </tbody>
            </table>
            <% }) %>
                <% } else { %>
                    <p class="no-records">No Records Found</p>

                    <% }%>

    </section>
    <%- include('../partials/footer') %>