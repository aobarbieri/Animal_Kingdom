<%- include('../partials/header') %>
    <h1><%= pet.name %>, Medical Records </h1>
    <div>
        <p>Name: <%= pet.name %></p>
        <p>Species: <%= pet.species %></p>
        <p>Breed: <%= pet.breed %></p>
        <p>Age: <%= pet.age %></p>
        <p>DOB: <%= pet.DOB.toLocaleDateString() %></p>
    </div>
    <% if(records.length){ %>
        <table>
        <div>
            <thead>
                <tr>
                    <% if(user.userType === "Veterinarian"){ %>
                    <th></th>
                    <% } %>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Diagnosis</th>
                    <th>Treatment</th>
                    <th>Medication</th>
                    <% if(user.userType === "Veterinarian"){ %>
                    <th></th>
                    <% } %>
                    </tr>
                </thead>
        </div>
        <% records.forEach(r => { %>
        <div>
            <tbody>
                <form action="/user/<%= user._id %>/records/<%= r._id %>?_method=DELETE" method="POST">
                <tr>
                <% if(user.userType === "Veterinarian"){ %>
                    <td><button type="submit">X</button></td> 
                    <% } %>
                    <td><%= r.date.toLocaleDateString() %></td>
                    <td><%= r.date.toLocaleTimeString() %></td>
                    <td><%= r.diagnosis %></td>
                    <td><%= r.treatment %></td>
                    <td><%= r.medication %></td>
                    <% if(user.userType === "Veterinarian"){ %>
                    <td><a href="/user/<%= user._id %>/records/<%= r._id %>/edit">EDIT</a></td>
                    <% } %>
                </tr>
            </form>
            </tbody>

        </div>
        </table>
        <% }) %>
    <% } else { %>
        <p>No Records Yet</p>   
        
    <% }%>
<%- include('../partials/footer') %>