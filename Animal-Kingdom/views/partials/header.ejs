<!-- views/partials/header.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <!-- other head elements like CSS links -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <!-- Navigation bar, logo, etc. -->
      <nav>
          <a href="/user/<%=user._id%>">Home</a> |
          <% if(user.userType === "Owner"){ %>
            <a href="/user/<%=user._id%>/appointments">Book Appointment</a> |
          <% } %>

          <% if(user.userType === "Veterinarian"){ %>
            <a href="/user/<%=user._id%>/appointments/new">Add Availability</a> |
            <a href="/user/<%=user._id%>/records/new">New Patient Record</a> 
          <% } %>
      </div>

      <div class="nav-user">

        <ul class="hidden">
          <li>My account</li>
          <li>Settings</li>
          <a href="/"><button>Logout</button></a>
        </ul>

        <div class="notification">
          <img class='bell' src="/images/bell.png" alt="Bell">
          <div class="dot"></div>
        </div>
        <img class='avatar' src="/images/avatar.jpg" alt="User Avatar">


          <p>Hello, <%= user.firstName %>
          </p>
      </div>

    </nav>
  </header>
  <main>