<%- include('../partials/header') %>

<form action="/user/<%=user._id %>/records" method="POST">
    <label for="pet">Pet: 
        <select name="pet" id="" required>
            <% pets.forEach(p => { %>
                <option value="<%= p._id %>">Name: <%= p.name%> DOB: <%= p.DOB.toLocaleDateString() %></option>
                <% }) %>
        </select>
    </label><br/><br/>

    <label for="date">Date: 
        <input type="datetime-local" name="date" required>
    </label><br/><br/>

    <label for="diagnosis">Diagnosis: 
        <input type="text" name="diagnosis" required>
    </label><br/><br/>

    <label for="treament">Treament: 
        <input type="text" name="treatment" required>
    </label><br/><br/>

    <label for="medication">Medication: 
        <input type="text" name="medication" required>
    </label><br/><br/>

    <button type="submit">Create Record</button>
</form>
<%- include('../partials/footer') %>

